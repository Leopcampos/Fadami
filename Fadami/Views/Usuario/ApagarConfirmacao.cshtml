@model Usuario

@{
    ViewData["Title"] = "Confirmação apagar o usuário";
}

<div class="text-center">
    <h3>@ViewData["Title"] (@Model.Nome)?</h3>
</div>

<div class="text-center">
<a role="button" class="btn btn-primary btn-block" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
<a role="button" class="btn btn-danger btn-block" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Codigo">Confirmar exclusão</a>
</div>